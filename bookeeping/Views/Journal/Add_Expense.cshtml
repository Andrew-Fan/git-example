@model Journal
@{
    ViewData["Title"] = "Add Exp";
}

<br>
<div class="content">
    <form method="post">
        <input asp-for="UserID" value="@Model.UserID" type="hidden">
        <input asp-for="Date" value="@DateTime.Now" type="date">
        <input asp-for="Type" value="1" type="hidden">
        <label asp-for="Category">種類</label>
        <select asp-for="Category">
            <option value="食物">食物</option>
            <option value="交通">交通</option>
            <option value="娛樂">娛樂</option>
            <option value="購物">購物</option>
            <option value="個人雜支">個人雜支</option>
            <option value="學習">學習</option>
            <option value="其他">其他</option>
        </select>
        <label asp-for="AccountingTitle">項目</label>
        <input asp-for="AccountingTitle">
        <label asp-for="Description">描述</label>
        <input asp-for="Description">
        <label asp-for="Amount">金額</label>
        <input asp-for="Amount" type="number">
        <input type="submit" value="新增">
    </form>
</div>