@model Journal
@{
    ViewData["Title"] = "Edit Journal";
}

<br>
<div class="content">
    <form method="post">
        <input asp-for="UserID" value="@Model.UserID" type="hidden">
        <input asp-for="JournalID" value="@Model.JournalID" type="hidden">
        <input asp-for="Date" value="@Model.Date" type="date">
        <input asp-for="Type" value="0" type="hidden">
        <label asp-for="Category">種類</label>
        <select asp-for="Category">
            <option value="薪水">薪水</option>
            <option value="獎金">獎金</option>
            <option value="投資">投資</option>
            <option value="其他">其他</option>
        </select>
        <label asp-for="AccountingTitle">項目</label>
        <input asp-for="AccountingTitle" value="@Model.AccountingTitle">
        <label asp-for="Description">描述</label>
        <input asp-for="Description" value="@Model.Description">
        <label asp-for="Amount">金額</label>
        <input asp-for="Amount" type="number" value="@Model.Amount">
        <input type="submit" value="修改">
    </form>
</div>